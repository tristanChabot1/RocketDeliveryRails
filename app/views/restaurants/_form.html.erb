<%= form_with(model: restaurant) do |form| %>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.collection_select(:user_id, User.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :address_id, style: "display: block" %>
    <%= form.collection_select(:address_id, Address.where.not(id: Restaurant.pluck(:address_id)), :id, :street_address) %>
  </div>

  <div>
    <%= form.label :phone, style: "display: block" %>
    <%= form.text_field :phone %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :price_range, style: "display: block" %>
    <%= form.number_field :price_range %>
  </div>

  <div>
    <%= form.label :active, style: "display: block" %>
    <%= form.check_box :active %>
  </div>

  <div class="submit">
    <%= form.submit %>
  </div>
<% end %>
